{
  "manifest_version": 3,
  "name": "eBay Title Scraper",
  "version": "1.0",
  "description": "Extract eBay product title and export to CSV.",
  "permissions": [
    "scripting",
    "activeTab",
    "downloads",
    "storage",
    "tabs"
  ],
  "action": {
    "default_title": "eBay Title Scraper"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.ebay.com/itm/*"],
      "js": ["content.js"]
    }
  ],
  "host_permissions": ["https://www.ebay.com/itm/*"]
} 